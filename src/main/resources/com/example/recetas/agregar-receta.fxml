<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.recetas.AgregarRecetaController" stylesheets="@estilo.css" fx:id="agregarReceta">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="nombreTextField" promptText="Nombre de la receta"/>
    <TextArea fx:id="ingredientesTextArea" promptText="Ingredientes"/>
    <TextArea fx:id="instruccionesTextArea" promptText="Instrucciones"/>
    <Button text="Agregar Imagen" onAction="#agregarImagen"/>
    <ImageView fx:id="imagenRecetaView" fitWidth="200" fitHeight="200" preserveRatio="true"/>
    <Button text="Guardar Receta" onAction="#guardarReceta"/>
</VBox>